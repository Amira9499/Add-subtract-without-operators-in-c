#include <stdio.h>
#include <stdlib.h>
#define N 5


int main()
{ int x, a[N];
for(x=0;x<5;x++)
{
    printf("please enter value of %d \n",x);
    scanf("%d",&a[x]);
}

for(x=N-1;x>=0;x--)
{
    printf("%d",a[x]);
}
    return 0;
}
