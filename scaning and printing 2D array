#include <stdio.h>
#include <stdlib.h>


int main()
{ int a[2][4] , i ,j;
for(i=0;i<2;i++)
{
    for(j=0;j<4;j++)
    {
        printf("please neter the value of index[%d][%d] \n",i,j);
        scanf("%d",&a[i][j]);
    }
}
printf("array of a[2][4] is: \n");
printf("{");
for(i=0;i<2;i++)
{
    for(j=0;j<4;j++)
    {
        printf("%d ," , a[i][j]);
    }
}
printf("}");



    return 0;
}
